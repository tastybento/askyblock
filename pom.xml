			<artifactId>spigot-1.9.2</artifactId>
			<scope>system</scope>
			<systemPath>${server.jars}/spigot-1.9.2.jar</systemPath>
			<version>1.9.2</version>
		</dependency>
		<dependency>
			<groupId>spigotmc.org</groupId>
